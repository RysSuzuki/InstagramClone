<h1>お気に入り投稿</h1>
<div class="container">
    <div class="row">
        <% @user.favorites.order('created_at DESC').each do |favorite| %>
          <div class="col-xs-12 picture-panel">
            <p><%= link_to favorite.picture.user.name, user_path(favorite.picture.user.id)%></p>
            <p><%= favorite.picture.content %></p>
            <% if favorite.picture.image.url != nil %>
              <p><%= image_tag favorite.picture.image.url,:size =>'400x400'%></p>
            <% end %>
          </div>
        <% end %>
    </div>
</div>
